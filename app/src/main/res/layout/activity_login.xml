<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/login_titl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/lotus_686963" />

    <TextView
        android:id="@+id/login_titl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/montserrat_bold"
        android:shadowColor="#000000"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="9"
        android:text="Войдите в свою учетную запись"
        android:textAlignment="center"
        android:textColor="#F7E3E3"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/login_pismo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_titl"
        app:srcCompat="@drawable/smartphone_7344131"/>

    <ImageView
        android:id="@+id/login_zamochek"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_pismo"
        app:srcCompat="@drawable/padlock_7339419" />

    <EditText
        android:id="@+id/login_phone"
        android:inputType="phone"
        android:layout_width="242dp"
        android:layout_height="60dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/ubuntu_light"
        android:hint="Номер телефона"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/login_pismo"
        app:layout_constraintTop_toBottomOf="@+id/login_titl" />

    <EditText
        android:id="@+id/login_password"
        android:inputType="textPassword"
        android:layout_width="242dp"
        android:layout_height="60dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/ubuntu_light"
        android:hint="Пароль"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/login_zamochek"
        app:layout_constraintTop_toBottomOf="@+id/login_phone" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:layout_marginTop="55dp"
        android:backgroundTint="@color/pinkk"
        android:fontFamily="@font/montserrat_bold"
        android:shadowColor="#000000"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="8"
        android:text="Войти"
        android:textColor="#F7E3E3"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_password" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/login_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:text="Впервые здесь?"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/go_to_register"
            android:textColor="@color/blue"
            android:text="Создать аккаунт"
            android:layout_marginStart="7dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>




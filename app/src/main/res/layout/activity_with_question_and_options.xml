            app:layout_constraintTop_toBottomOf="@+id/family">

        </TextView>

        <ImageView
            android:id="@+id/glass"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="55dp"
            android:background="@android:color/transparent"
